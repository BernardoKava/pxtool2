<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "PXtool-2.0", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",  root_path %></li>
        <% if current_user %>
          <li><%= link_to "Herga.net", 'http://herga.net' %></li>
          <% if current_user.explicit == true %>
            <li><%= link_to "Istory", 'http://istory.herga.net/' %></li>
          <% end %>
          <% if current_user.admin == true %>
            <li><%= link_to "Admin Panel", rails_admin_path %></li>
          <% end %>
          <li class="alert-danger"><%= link_to "Log out", destroy_user_session_path, method: :delete, class:'fa fa-sign-out',style:'color:darkred' %></li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path, class:'fa fa-sign-in'%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
